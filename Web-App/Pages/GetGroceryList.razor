<div class="mainsquare">
    @* HTML elements*@
    <div class="smallersquare">
        <img src="https://i.imgur.com/MF5gfZC.png" class="buurtboer-logo" />
        <div class="button-container">
            <button class="@GetLanguageButtonClass(true)"
            @onclick="() => SelectLanguage(true)">
                NL
            </button>

            <button class="@GetLanguageButtonClass(false)"
            @onclick="() => SelectLanguage(false)">
                EN
            </button>
        </div>
        <button class="homescreen-button" @onclick="HomeScreenRouting">Home</button>
        @if (User.CurrentUser != null)
        {
            @if (CheckUserRole() == Role.SuperAdmin)
            {
                <button class="companies-button" @onclick="CompaniesRouting">Companies</button>
            }
            else
            {
                <button class="grocerylist-button" @onclick="GroceryListRouting">Grocery List</button>
            }
        }
        <button class="employee-button" @onclick="EmployeeRouting">Employees</button>
        <button class="lunchdata-button" @onclick="LunchDataRouting">Lunchdata</button>
        <button class="logout-button" @onclick="HandleLogout">Log out</button>
    </div>
    <div class="squareinmainsquare">
        <div class="text-containersquare">
            <p>Grocery List</p>
        </div>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>@numberOfLunches lunches needed next week:</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in groceriesNeeded)
                    {
                        <tr>
                            <td>@product.Amount @product.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <img src="https://i.imgur.com/lVGmhhZ.png" class="instellingen-logo" @onclick="ChangeMultiplier" />
        <button class="change-multiplierbutton" @onclick="ChangeMultiplier">
            <span>Change multiplier</span>
        </button>
    </div>
</div>

@code {
    public User currentUser = new();
    private bool isDutchSelected = true;
    ObservableCollection<UserModel> employees = new();
    private int numberOfLunches;
    private List<Grocery> groceriesNeeded = new();

    public class Grocery
    {
        public string Name { get; set; }
        public int Amount { get; set; }
    }

    private async Task GetEmployees() // alle employees van een bedrijf pakken zodat je ze op het scherm kan laten zien.
    {
        if (User.CurrentUser.Role == Role.Admin)//als het een admin is alleen van dat bedrijf printen.
        {
            await User.GetAllEmployeesPerCompany(User.CurrentUser.CompanyId);
        }
        else// als het een superadmin is alle employees printen.
        {
            await User.GetAllUsers();
        }
    }

    private void transformEmployees() // alles omzetten naar een usermodel en de admin van dat moment niet toevoegen aan de lijst.
    {
        foreach (var employee in User.Users)
        {
            if (employee.Id == User.CurrentUser.Id)
            {
                continue;
            }
            if (employee.Role == Role.SuperAdmin && User.CurrentUser.Role == Role.Admin)
            {
                continue;
            }
            else
            {
                employees.Add(new UserModel
                    {
                        Name = employee.FirstName + " " + employee.LastName,
                        Email = employee.Email,
                        Role = employee.Role,
                        IsSelected = false, // Set to false here
                        ID = employee.Id
                    });
            }
        }
    }

    public class UserModel
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public bool IsSelected { get; set; }
        public Role Role { get; set; }
        public Guid ID { get; set; }
    }

    private async Task LunchesNeeded()
    {
        foreach (var employee in employees)
        {
            numberOfLunches += await User.getLunchesAmountNextWeek(employee.ID);
        }
    }

    public void AmountOfProducts()
    {
        List<Grocery> products = new List<Grocery>
        {
            new Grocery { Name = "loaf(s) of bread", Amount = 6},
            new Grocery { Name = "package(s) of cheese slices", Amount = 3 },
            new Grocery { Name = "jar(s) of peanut butter", Amount = 1 },
            new Grocery { Name = "jar(s) of hagelsag", Amount = 1 },
            new Grocery { Name = "jar(s) of nutella", Amount = 1 },
            new Grocery { Name = "jar(s) of speculoos", Amount = 1 },
            new Grocery { Name = "liter(s) of milk", Amount = 2 },
            new Grocery { Name = "package(s) of ham", Amount = 2 },
            new Grocery { Name = "package(s) of salami", Amount = 2 },
            new Grocery { Name = "liter(s) of juice", Amount = 2 },
            new Grocery { Name = "package(s) of butter", Amount = 2 },
            new Grocery { Name = "banana(s)", Amount = 4 },
            new Grocery { Name = "apple(s)", Amount = 3 }
        };
        var multiplier = numberOfLunches / 10.0;
        foreach ( var product in products)
        {
            product.Amount = (int)Math.Ceiling((double)product.Amount * (double)multiplier);
            groceriesNeeded.Add(product);
        }
    }

    private void HandleLogout()// uitloggen.
    {
        User.Logout();
        NavigationManager.NavigateTo("/login");
    }

    protected async override Task OnInitializedAsync() // Gelijk wanneer pagina opent kijken of de persoon is ingelogd anders naar login scherm.
    {
        if (!IsUserLoggedIn())
        {
            NavigationManager.NavigateTo("/login");
        }
        await GetEmployees();
        transformEmployees();
        await LunchesNeeded();
        AmountOfProducts();
    }

    private bool IsUserLoggedIn() // kijken of gebruiker ingelogd is.
    {
        return User.CurrentUser != null;
    }

    private Role CheckUserRole()
    {
        return User.CurrentUser.Role;
    }

    private void HomeScreenRouting()
    {
        NavigationManager.NavigateTo("/home");
    }

    private void EmployeeRouting()
    {
        NavigationManager.NavigateTo("/employees");
    }

    private void GroceryListRouting()
    {
        NavigationManager.NavigateTo("/grocerylist");
    }

    private void LunchDataRouting()
    {
        NavigationManager.NavigateTo("/lunchdata");
    }

    private void ChangeMultiplier()
    {
        NavigationManager.NavigateTo("/changegrocerymultiplier");
    }

    private string GetLanguageButtonClass(bool isDutch) // hiermee kijk je welke taal er geselecteerd is en of hij dus moet veranderen of niet.
    {
        if (isDutch == language.isDutchSelected)
        {
            return "language-button-clicked";
        }
        else
        {
            return "language-button-notclicked";
        }
    }

    private void SelectLanguage(bool isDutch)
    {
        // kijken of nederlands geselecteerd is.
        language.isDutchSelected = isDutch;

        // refresh de webpage met de goede kleuren.
        StateHasChanged();
    }

    private void CompaniesRouting()
    {
        NavigationManager.NavigateTo("/companies");
    }
}
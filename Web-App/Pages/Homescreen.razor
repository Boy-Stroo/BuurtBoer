        font-family: monospace;
        font-size: 20px;
        margin-top: 10px;
        margin-left: 20px;
    }

    .text-containerreminderline { /*tekst onder remind knop*/
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: black;
        font-family: monospace;
        font-size: 12px;
        margin-top: 10px;
        margin-left: 294px;
    }

    .remind-button { /*kleur van "Remind" button*/
        background-color: #F9834C;
        color: white;
        border: none;
        border-radius: 8px;

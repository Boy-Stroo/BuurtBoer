        margin-top: 120px;
    }
    
    .squaretwo {
        width: 1200px;
        height: 500px;
        background-color: #099F91;
        border-radius: 10px;
        position: relative;
        top: 150px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .smallersquaretwo {
        width: 300px;
        height: 500px;
        background-color: #00A89B;
        border-radius: 10px;
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: -1;
    }

    .text-containersquaretwo {
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: center;
        color: white;
        font-family: monospace;

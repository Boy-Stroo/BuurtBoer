        flex-direction: column;
    }

    .squareone {
        width: 1200px;
        height: 250px;
        background-color: #099F91;
        border-radius: 10px;
        position: relative;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        flex-direction: column;
        align-items: center;
    }

    .buurtboer-logo {
        width: 300px;
        height: 250px;
        top: 0px;
        left: 0%;

    }

    .login-text {
        position: absolute;
        top: 35px;
        left: 350px;
        color: white;
        font-family: monospace;
        font-size: 40px;
    }

    .button-container {
        position: absolute;
        top: 20px;
        left: 20px;
        display: flex;
        flex-direction: row;
    }

    .language-buttonenglish {
        background-color: #F9834C;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 16px;
        margin-right: 10px;
        cursor: pointer;
    }

    .language-buttondutch {
        background-color: #099F91;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 16px;
        margin-right: 10px;
        cursor: pointer;
    }

    .language-button-clicked {
        background-color: #F9834C;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 16px;
        margin-right: 10px;
        cursor: pointer;
    }

    .language-button-notclicked {
        background-color: #099F91;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 16px;
        margin-right: 10px;
        cursor: pointer;
    }

    .continue-button {
        background-color: #F9834C;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 15px 30px;
        font-size: 24px;
        cursor: pointer;
    }

    .button-clicked {
    background-color: #F9834C;
    }
</style>

<div class="squareone">
    <div class="text-contactsquareone">
        <p>CONTACT</p>
    </div>
    <div class="text-containersquareone">
        <p>service@debuurtboer.nl</p>
        <p>088-730 2200</p>
    </div>
    <img src="https://i.imgur.com/MF5gfZC.png" class="buurtboer-logo" />
</div>

<div class="squaretwo">
    <div class="smallersquaretwo"></div>
    <div class="button-container">
      <button class="@GetLanguageButtonClass(true)" 
              @onclick="() => SelectLanguage(true)">NL</button>

      <button class="@GetLanguageButtonClass(false)"
              @onclick="() => SelectLanguage(false)">EN</button>
    </div>

    <div class="login-text">LOGIN</div>
    <div class="text-containersquaretwo">
        <label for="email adress">Email address:</label>
        <input type="text" id="email adress" />

        <label for="password">Password:</label>
        <input type="password" id="password" />
        <button class="continue-button" @onclick="HandleLogin">Continue</button>
    </div>
</div>

@code {
    private void HandleLogin()
    {
        // Add login logic here
        // Check username and password against database
        // Redirect user if login is successful
    }

    private bool isDutchSelected = true;

    private string GetLanguageButtonClass(bool isDutch) 
    {
        if (isDutch == isDutchSelected) {
            return "language-button-clicked"; 
        } else {
            return "language-button-notclicked";
        }
    }

    private void SelectLanguage(bool isDutch)
    {
        // Toggle selected language
        isDutchSelected = isDutch;
  
        // Refresh UI
        StateHasChanged();
    }
}

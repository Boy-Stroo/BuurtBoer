<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile_App"
    Shell.FlyoutBehavior="Disabled"
    NavBarIsVisible="False"
    TabBarIsVisible="False">

    <!-- Define a new page here. Follow the pattern of previous pages -->
    <ShellContent
        ContentTemplate="{DataTemplate local:LogInPage}"
        Route="LogInPage"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False"/>

    <ShellContent
        Title="Testing"
        ContentTemplate="{DataTemplate local:MyPage}"
        Route="MyPage"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False"/>

    <ShellContent
        ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
        Route="ForgotPasswordPage"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False"/>

</Shell>
